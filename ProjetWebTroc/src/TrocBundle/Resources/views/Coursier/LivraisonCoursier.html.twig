                        <td><h5>Client Address</h5></td>
                        <td><h5>Client Phone N°</h5></td>
                        <td><h5>Registration Date</h5></td>
                        <td><h5>Delivery Status</h5></td>
                        <td><h5>Shipping Cost</h5></td>
