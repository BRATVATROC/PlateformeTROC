                                    <td> {{ liste3[i].fraislivraison }}</td>

                                    <td><a href="{{ path('LivraisonValide',{'idLivraison':liste3[i].idlivraison}) }}">Save</a></td>
                                {% endif %}
                                {% if(liste3[i].livraisonrecue!=0) %}
