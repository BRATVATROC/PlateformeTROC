{% extends 'base.html.twig' %}

{% block Main %}
<center>
    <h1>What others thinks about US !</h1>
<br><br>

<div>
    <table>
        {% for o in opinion %}
          <tr>
           <td >

               {% if(o.idUser==null) %}
                   <label > <strong style="color:red">{{ 'Anonymous' }}</strong>
                       <strong>said:</strong>  {{ o.contenu }}  <strong style="color:orange"> Rating: </strong> {{ o.note }}/5</label>
            {% else %}
                <label> <strong style ="color:blue">{{o.idUser }}</strong>
                       <strong >said:</strong> {{ o.contenu }}   <strong style="color:orange"> Rating: </strong> {{ o.note }}/5</label>
            {% endif %}
               <hr width="60%">
           </td>
          </tr>
        {% endfor %}
    </table>

</div>
</center>
{% endblock %}