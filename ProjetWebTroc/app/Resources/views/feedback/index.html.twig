{% extends 'base.html.twig' %}

{% block body %}
    <h1>Feedbacks list</h1>

    <table>
        <thead>
            <tr>
                <th>Idfeed</th>
                <th>Likefeed</th>
                <th>Dislike</th>
                <th>Note</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feedback in feedbacks %}
            <tr>
                <td><a href="{{ path('feedback_show', { 'idFeed': feedback.idFeed }) }}">{{ feedback.idFeed }}</a></td>
                <td>{{ feedback.likeFeed }}</td>
                <td>{{ feedback.dislike }}</td>
                <td>{{ feedback.note }}</td>
                <td>{% if feedback.date %}{{ feedback.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('feedback_show', { 'idFeed': feedback.idFeed }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('feedback_edit', { 'idFeed': feedback.idFeed }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('feedback_new') }}">Create a new feedback</a>
        </li>
    </ul>
{% endblock %}
